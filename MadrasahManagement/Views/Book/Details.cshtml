@model MadrasahManagement.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">

            <div class="text-center mb-5">
                <h1 class="h2 text-dark mb-2">Book Information</h1>
                <p class="text-muted">Detailed view of book inventory and availability</p>
            </div>


            <div class="card shadow border-0">
             
              
                <div class="card-body p-4">
                    <div class="row">
                        <!-- Book Cover Image -->
                        @if (!string.IsNullOrEmpty(Model.ImageUrl))
                        {
                            <div class="col-md-4 text-center mb-4">
                                <div class="bg-light rounded p-3">
                                    <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded shadow" style="max-height: 300px;">
                                    <div class="mt-3">
                                        @if (Model.AvailableCopies > 0)
                                        {
                                            <span class="badge bg-success fs-6 p-2">
                                                <i class="fas fa-check-circle me-1"></i>Available
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger fs-6 p-2">
                                                <i class="fas fa-times-circle me-1"></i>Out of Stock
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                        }

                        <!-- Book Information -->
                        <div class="@(string.IsNullOrEmpty(Model.ImageUrl) ? "col-12" : "col-md-8")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Title</label>
                                        <div class="fs-5 text-dark">@Model.Title</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Author</label>
                                        <div class="fs-6 text-dark">@Model.Author</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">ISBN</label>
                                        <div class="fs-6">
                                            <code class="text-dark">@Model.ISBN</code>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Category</label>
                                        <div class="fs-6">
                                            <span class="badge bg-secondary">@Model.Category</span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Total Copies</label>
                                        <div class="fs-5 text-dark">@Model.TotalCopies</div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Available Copies</label>
                                        <div class="fs-5">
                                            <span class="@(Model.AvailableCopies > 0 ? "text-success" : "text-danger") fw-bold">
                                                @Model.AvailableCopies
                                            </span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label fw-semibold text-muted small mb-1">Currently Issued</label>
                                        <div class="fs-6 text-dark">
                                            @Model.IssuedBooks.Count(ib => ib.ReturnDate == null)
                                            <small class="text-muted ms-1">copies</small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Status Summary -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="border-top pt-3">
                                        <div class="row text-center">
                                            <div class="col-md-4">
                                                <div class="border-end">
                                                    <div class="fs-4 fw-bold text-primary">@Model.TotalCopies</div>
                                                    <div class="text-muted small">Total Copies</div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="border-end">
                                                    <div class="fs-4 fw-bold text-success">@Model.AvailableCopies</div>
                                                    <div class="text-muted small">Available Now</div>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div>
                                                    <div class="fs-4 fw-bold text-warning">@Model.IssuedBooks.Count(ib => ib.ReturnDate == null)</div>
                                                    <div class="text-muted small">Currently Issued</div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-flex gap-2 pt-4 mt-4 border-top">
                        <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-success px-4">
                            <i class="fas fa-edit me-2"></i>Edit Book
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            <i class="fas fa-list me-2"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>