@model IEnumerable<MadrasahManagement.Models.Book>

@{
    ViewData["Title"] = "Book Inventory";
}

<div class="container ">

    <div class="text-center mb-4">
        <h3 class="fw-bold text-dark display-6 position-relative">
            <span class="px-2 py-1 rounded-3 shadow-sm bg-light border-start border-2 border-primary">
                📚 Book Inventory
            </span>
        </h3>
    </div>

   
    <div class="d-flex justify-content-end gap-3 mb-4">
        <a asp-action="Create" class="btn btn-success rounded-pill px-4 shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Add New Book
        </a>
        <a asp-controller="IssuedBook" asp-action="Create" class="btn btn-primary rounded-pill px-4 shadow-sm">
            <i class="fas fa-arrow-right-from-bracket me-2"></i> Issue New Book
        </a>
    </div>


    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card book-card shadow-sm">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(book.ImageUrl))
                            {
                                <img src="@book.ImageUrl" alt="@book.Title" class="book-cover">
                            }
                            else
                            {
                                <div class="book-cover-placeholder">
                                    <i class="fas fa-book"></i>
                                </div>
                            }

                            <span class="availability-badge badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                Available: @book.AvailableCopies
                            </span>
                        </div>

                        <div class="card-body p-3">
                            <h5 class="book-title">@book.Title</h5>
                            <p class="book-author mb-2">By @book.Author</p>

                            <div class="d-flex justify-content-between text-muted small mb-3">
                                <span>Total: @book.TotalCopies</span>
                                <span>Left: @book.AvailableCopies</span>
                            </div>

                            <div class="action-buttons d-flex gap-2">
                                <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-outline-success w-100">Edit</a>
                                <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-secondary w-100">View</a>
                                <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-outline-danger w-100">Delete</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 text-end">
            <small class="text-muted">Total: @Model.Count() books</small>
        </div>
    }
    else
    {
        <div class="text-center empty-state">
            <i class="fas fa-books fa-4x mb-3"></i>
            <h4 class="text-muted">No Books Available</h4>
            <p>Start building your library collection today.</p>
        </div>
    }
</div>


<style>
    .book-card {
        transition: all 0.3s ease;
        border-radius: 14px;
        border: none;
        overflow: hidden;
    }

        .book-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 15px 25px rgba(0,0,0,0.15);
        }

    .book-cover {
        height: 230px;
        object-fit: cover;
        width: 100%;
        border-bottom: 1px solid #eee;
    }

    .book-cover-placeholder {
        height: 230px;
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        display: flex;
        align-items: center;
        justify-content: center;
        color: #6c757d;
        font-size: 2.5rem;
    }

    .availability-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        padding: 6px 12px;
        font-size: 0.85rem;
    }

    .book-title {
        font-weight: 700;
        color: #202224;
        min-height: 48px;
    }

    .book-author {
        color: #6c757d;
        font-style: italic;
    }

    .action-buttons .btn {
        border-radius: 30px;
        font-size: 0.9rem;
        padding: 6px 14px;
    }

    .empty-state {
        padding: 80px 20px;
    }

        .empty-state i {
            opacity: 0.3;
        }

</style>