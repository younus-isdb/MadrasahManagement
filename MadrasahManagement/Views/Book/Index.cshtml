@model IEnumerable<MadrasahManagement.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <div class="d-flex justify-content-center align-items-center mb-4 position-relative">
        <h2 class="text-dark mb-0 fw-bolder text-center">Book Inventory</h2>
        
        <a asp-action="Create" class="btn btn-success position-absolute end-0">
            <i class="fas fa-plus-circle me-2"></i>Add New Book
        </a>
        <a asp-controller="IssuedBook" asp-action="Create" class="btn btn-primary">Issue New Book</a>
    </div>

    <style>
        .book-card {
            transition: transform 0.3s, box-shadow 0.3s;
            height: 100%;
            border-radius: 12px;
            overflow: hidden;
            border: none;
        }

            .book-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(0,0,0,0.1);
            }

        .book-cover {
            height: 200px;
            object-fit: cover;
            width: 100%;
        }

        .book-cover-placeholder {
            height: 200px;
            background-color: #f8f9fa;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #6c757d;
        }

        .availability-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 1;
        }

        .book-title {
            font-weight: 600;
            color: #212529;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            height: 48px;
        }

        .book-author {
            color: #6c757d;
            font-size: 0.9rem;
        }

        .book-isbn {
            font-family: monospace;
            font-size: 0.8rem;
            color: #6c757d;
        }

        .book-category {
            background-color: #e9ecef;
            color: #495057;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.8rem;
            display: inline-block;
        }

        .stats-container {
            display: flex;
            justify-content: space-between;
            background-color: #f8f9fa;
            border-radius: 8px;
            padding: 8px 12px;
            margin: 10px 0;
        }

        .stat-item {
            text-align: center;
            flex: 1;
        }

        .stat-value {
            font-weight: 600;
            font-size: 1.1rem;
        }

        .stat-label {
            font-size: 0.75rem;
            color: #6c757d;
        }

        .action-buttons {
            display: flex;
            gap: 8px;
            margin-top: 15px;
        }

        .btn-action {
            flex: 1;
            border-radius: 20px;
            font-size: 0.85rem;
            padding: 6px 12px;
        }
    </style>

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            @foreach (var book in Model)
            {
                <div class="col-md-6 col-lg-4 col-xl-3">
                    <div class="card book-card shadow">
                        <div class="position-relative">
                            @if (!string.IsNullOrEmpty(book.ImageUrl))
                            {
                                <img src="@book.ImageUrl" alt="@book.Title" class="book-cover">
                            }
                            else
                            {
                                <div class="book-cover-placeholder">
                                    <i class="fas fa-book fa-3x"></i>
                                </div>
                            }
                            <span class="availability-badge badge @(book.AvailableCopies > 0 ? "bg-success" : "bg-danger")">
                                Available: @book.AvailableCopies
                            </span>
                        </div>
                        <div class="card-body">
                            <h5 class="book-title">@book.Title</h5>
                            <p class="book-author mb-1">@book.Author</p>
                          @*   <p class="book-isbn mb-2">ISBN: @book.ISBN</p>
                            <span class="book-category">@book.Category</span> *@

                           @*  <div class="stats-container">
                                <div class="stat-item">
                                    <div class="stat-value">@book.TotalCopies</div>
                                    <div class="stat-label">Total</div>
                                </div>
                                <div class="stat-item">
                                    <div class="stat-value">@book.AvailableCopies</div>
                                    <div class="stat-label">Available</div>
                                </div>
                            </div> *@

                            <div class="action-buttons">
                                <a asp-action="Edit" asp-route-id="@book.BookId" class="btn btn-outline-success btn-action">
                                    Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@book.BookId" class="btn btn-outline-secondary btn-action">
                                    View
                                </a>
                                <a asp-action="Delete" asp-route-id="@book.BookId" class="btn btn-outline-danger btn-action">
                                    Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-4 text-end">
            <small class="text-muted">Total: @Model.Count() books</small>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="text-muted">
                <i class="fas fa-books fa-3x mb-3 opacity-25"></i>
                <h4 class="text-muted">No Books Available</h4>
                <p class="mb-0">Start building your library collection</p>
            </div>
        </div>
    }
</div>