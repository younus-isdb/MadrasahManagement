@model ExamFee

<h2>Create Exam Fee</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label>Education Year</label>
        <input asp-for="EducationYear" class="form-control" />
    </div>

    <div class="form-group">
        <label>Class</label>
        <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-control">
            <option value="">-- Select Class --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Exam</label>
        <select asp-for="ExamId" asp-items="ViewBag.ExamId" class="form-control">
            <option value="">-- Select Exam --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Exam Fee</label>
        <input asp-for="ExamAmount" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Save</button>
</form>
