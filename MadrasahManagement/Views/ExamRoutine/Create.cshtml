@model MadrasahManagement.Models.ExamRoutine
@{
    ViewData["Title"] = "Create Exam Routine";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group mb-3">
        <label asp-for="EducationYear"></label>
        <input asp-for="EducationYear" class="form-control" />
        <span asp-validation-for="EducationYear" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClassId">Class</label>
        <select asp-for="ClassId" asp-items="ViewBag.ClassId" class="form-select">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamId">Exam</label>
        <select asp-for="ExamId" asp-items="ViewBag.ExamId" class="form-select">
            <option value="">-- Select Exam --</option>
        </select>
        <span asp-validation-for="ExamId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="SubjectId">Subject</label>
        <select asp-for="SubjectId" asp-items="ViewBag.SubjectId" class="form-select">
            <option value="">-- Select Subject --</option>
        </select>
        <span asp-validation-for="SubjectId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="RoomNumber"></label>
        <input asp-for="RoomNumber" class="form-control" />
        <span asp-validation-for="RoomNumber" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamDate"></label>
        <input asp-for="ExamDate" type="date" class="form-control" />
        <span asp-validation-for="ExamDate" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamStartTime"></label>
        <input asp-for="ExamStartTime" type="time" class="form-control" />
        <span asp-validation-for="ExamStartTime" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamEndTime"></label>
        <input asp-for="ExamEndTime" type="time" class="form-control" />
        <span asp-validation-for="ExamEndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
