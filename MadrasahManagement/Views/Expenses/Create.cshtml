@model Expense

<h2>Add New Expense</h2>

<form asp-action="Create" method="post">
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Type">Expense Type *</label>
                <select asp-for="Type" class="form-control" required>
                    <option value="">-- Select Type --</option>
                    @foreach (var type in ViewBag.ExpenseTypes)
                    {
                        <option value="@type">@type</option>
                    }
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Amount">Amount (৳) *</label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" required />
            </div>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"
                  placeholder="Enter expense details..."></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Date">Date *</label>
        <input asp-for="Date" class="form-control" type="datetime-local"
               value="@DateTimeOffset.Now.ToString("yyyy-MM-ddTHH:mm")" required />
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Expense</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>