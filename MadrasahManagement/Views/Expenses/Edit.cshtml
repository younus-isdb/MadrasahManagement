@model Expense

@{
    ViewData["Title"] = "Edit Expense";
}

<h2>Edit Expense</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ExpenseId" />

    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Type" class="form-label">Expense Type *</label>
                        <select asp-for="Type" class="form-control" required>
                            <option value="">-- Select Type --</option>
                            @foreach (var type in ViewBag.ExpenseTypes)
                            {
                                if (type == Model.Type)
                                {
                                    <option value="@type" selected>@type</option>
                                }
                                else
                                {
                                    <option value="@type">@type</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Amount" class="form-label">Amount (৳) *</label>
                        <input asp-for="Amount" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Amount" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Description" class="form-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="4"
                          placeholder="Enter expense details..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Date" class="form-label">Date & Time *</label>
                <input asp-for="Date" class="form-control" type="datetime-local"
                       value="@Model.Date.ToString("yyyy-MM-ddTHH:mm")" required />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Update Expense
            </button>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
            <a asp-action="Delete" asp-route-id="@Model.ExpenseId"
               class="btn btn-danger float-end"
               onclick="return confirm('Are you sure you want to delete this expense?')">
                <i class="fas fa-trash"></i> Delete
            </a>
        </div>
    </div>
</form>

<!-- Quick Stats -->
<div class="row mt-4">
    <div class="col-md-12">
        <div class="alert alert-info">
            <h5>Expense Information</h5>
            <ul class="mb-0">
                <li><strong>Expense ID:</strong> @Model.ExpenseId</li>
                <li><strong>Created:</strong> @Model.Date.ToString("dd MMMM yyyy hh:mm tt")</li>
                <li><strong>Current Amount:</strong> ৳@Model.Amount</li>
            </ul>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

   
}