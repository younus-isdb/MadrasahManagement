<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Halishahar Islamia Mahila Madrasah</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
        body {
            background-color: #f9f9f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            background-color: #1e5128;
            color: #FFD700;
        }

            .sidebar a {
                color: #FFD700;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
            }

                .sidebar a:hover,
                .sidebar .nav-link.active {
                    background-color: #14531d;
                    color: #fff !important;
                    border-radius: 8px;
                }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }

        .chart-container {
            height: 300px;
        }

        /* Mobile Responsive */
        @@media (max-width: 992px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
        }
    </style>
    <style>
        body {
            background-color: #f9f9f9;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 260px;
            min-height: 100vh;
            background-color: #1e5128;
            color: #FFD700;
        }

            .sidebar a {
                color: #FFD700;
                text-decoration: none;
                padding: 10px 15px;
                display: block;
            }

                .sidebar a:hover,
                .sidebar .nav-link.active {
                    background-color: #14531d;
                    color: #fff !important;
                    border-radius: 8px;
                }

        .card {
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15);
        }

        /* ✅🔥 Bootstrap + Tailwind COLLAPSE FIX */
        .collapse {
            visibility: visible !important;
        }

        @@media (max-width: 992px) {
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
            }
        }
    </style>

</head>
<body>
    <div class="d-flex">

        <!-- Sidebar -->
        <nav class="sidebar p-3">
            <h1 class="text-center mb-4">Menu</h1>
            

            <ul class="nav flex-column">

                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                   
                    <li class="nav-item"><a class="nav-link" asp-controller="Student" asp-action="Index">Students</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Teacher" asp-action="Index">Teachers</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Class" asp-action="Index">Classes</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Subject" asp-action="Index">Subjects</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Exam" asp-action="Index">Exams</a></li>
                   
                    <li class="nav-item"><a class="nav-link" asp-controller="IssuedBook" asp-action="Index">Issued Book</a></li>
                    <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle fw-bold"
                   href="#"
                   id="examDropdown"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    Examination
                </a>


                <ul class="dropdown-menu shadow" aria-labelledby="examDropdown">

                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="Index">Enter Exam Name</a></li>
                    <li><a class="dropdown-item" asp-controller="ExaminationFee" asp-action="Index">Set Exam Fee</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="SubClassGroup">Sub-Class Group Setup</a></li>
                    <li><a class="dropdown-item" asp-controller="Points" asp-action="Index">Point Based Condition</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="MeritCondition">Merit Condition</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="SubClassExamList">Sub-Class Exam List</a></li>

                    <li><hr class="dropdown-divider"></li>

                    <li><a class="dropdown-item" asp-controller="ExamFeeCollections" asp-action="Index">Collect Exam Fee</a></li>
                    <li><a class="dropdown-item" asp-controller="ExamRoutine" asp-action="Index">Exam Routine</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="IncomeExpense">Exam Income/Expense</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="AdmitCard">Separate Admit Card</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="PointReport">Point Based Exam Report</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="IncomeExpenseReport">Exam Income/Expense Report</a></li>

                </ul>
            </li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle fw-bold"
                   href="#"
                   id="examDropdown"
                   role="button"
                   data-bs-toggle="dropdown"
                   aria-expanded="false">
                    Results
                </a>


                <ul class="dropdown-menu shadow" aria-labelledby="examDropdown">

                    <li><a class="dropdown-item" asp-controller="" asp-action="Create">Point Based Results Entry</a></li>
                    <li><a class="dropdown-item" asp-controller="ExaminationFee" asp-action="Index">Present/Absent</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="SubClassGroup">Point Based MarkSheet </a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="PointCondition">Point Based Report</a></li>
                    <li><a class="dropdown-item" asp-controller="Examination" asp-action="MeritCondition">Online Result Published</a></li>
                

                </ul>
            </li>
                    
                }

                @if (User.IsInRole("Teacher"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Assignments" asp-action="MyAssignments">My Assignments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Attendance" asp-action="Mark">Mark Attendance</a></li>
                }

                @if (User.IsInRole("Student"))
                {
                    <li class="nav-item"><a class="nav-link" asp-controller="Dashboard" asp-action="Index">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Assignments" asp-action="MyAssignments">Assignments</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Exams" asp-action="MyResults">Exam Results</a></li>
                }

            </ul>
        </nav>

        <!-- Main Content -->
        <div class="flex-grow-1">

            <nav class="navbar navbar-expand-sm navbar-dark border-bottom box-shadow mb-3" style="background:#1e5128;">
                <div class="container-fluid">
                    <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">
                        Halishahar Islamia Madrasah
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="d-flex ms-auto text-light">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <span class="me-3">Hello, @User.Identity.Name</span>
                            <a class="btn btn-warning btn-sm" asp-controller="Account" asp-action="Logout">Logout</a>
                        }
                        else
                        {
                            <a class="btn btn-warning btn-sm" asp-controller="Account" asp-action="Login">Login</a>
                        }
                    </div>
                </div>
            </nav>

            <main class="container-fluid p-3">
                @RenderBody()
            </main>
        </div>

    </div>

    <footer class="bg-dark text-white py-3 mt-5">
        @* <div class="container">
            @await Component.InvokeAsync("FooterLatestItems", new { count = 5 })
        </div> *@
    </footer>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>
