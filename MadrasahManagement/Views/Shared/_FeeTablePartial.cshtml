@model IEnumerable<MadrasahManagement.Models.FeeCollection>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Student</th>
            <th>Fee Type</th>
            <th>Amount Paid</th>
            <th>Status</th>
            <th>Date Paid</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var f in Model)
        {
            <tr>
                <td>@f.Student?.StudentName ?? "N/A"</td>
                <td>@f.FeeType?.Name ?? "N/A"</td>
                <td>@f.AmountPaid.ToString("0.00") ৳</td>
                <td>
                    @if (f.Status == MadrasahManagement.Models.PaymentStatus.Pending)
                    {
                        <span class="badge bg-warning text-dark">Pending</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Paid</span>
                    }
                </td>
                <td>@f.DatePaid.ToString("yyyy-MM-dd")</td>
            </tr>
        }
    </tbody>
</table>
