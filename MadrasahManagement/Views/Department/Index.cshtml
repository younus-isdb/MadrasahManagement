@model IEnumerable<MadrasahManagement.Models.Department>
@{
    ViewData["Title"] = "Departments";
}

<h2 class="mb-4">Departments</h2>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Create New Department</a>
</p>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Department Name</th>
            <th>Description</th>
            <th>Classes Count</th>
            <th>Teachers Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DepartmentId</td>
                <td>@item.DepartmentName</td>
                <td>@item.Description</td>
                <td>@item.Classes.Count</td>
                <td>@item.Teachers.Count</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-info btn-sm"><i class="bi bi-eye"></i></a>
                    <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
