@model MadrasahManagement.Models.ExamFeeCollection

@{
    ViewData["Title"] = "Add Exam Fee Collection";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="EducationYear" class="form-label"></label>
        <input asp-for="EducationYear" class="form-control" placeholder="e.g., 2025-2026" />
        <span asp-validation-for="EducationYear" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamId" class="form-label"></label>
        <select asp-for="ExamId" class="form-select" asp-items="ViewBag.ExamId">
            <option value="">-- Select Exam --</option>
        </select>
        <span asp-validation-for="ExamId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ClassId" class="form-label"></label>
        <select asp-for="ClassId" class="form-select" asp-items="ViewBag.ClassId">
            <option value="">-- Select Class --</option>
        </select>
        <span asp-validation-for="ClassId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="StudentId" class="form-label"></label>
        <select asp-for="StudentId" class="form-select" asp-items="ViewBag.StudentId">
            <option value="">-- Select Student --</option>
        </select>
        <span asp-validation-for="StudentId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="TotalSubject" class="form-label"></label>
        <input asp-for="TotalSubject" class="form-control" placeholder="Total subjects" />
        <span asp-validation-for="TotalSubject" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ExamFee" class="form-label"></label>
        <input asp-for="ExamFee" class="form-control" placeholder="Fee amount" />
        <span asp-validation-for="ExamFee" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
