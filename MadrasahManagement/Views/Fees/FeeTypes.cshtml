@model IEnumerable<FeeType>

<h2>Fee Types</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<p>
    <a asp-action="CreateFeeType" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Fee Type
    </a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Class</th>
            <th>Amount</th>
            <th>Frequency</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Class?.ClassName</td>
                <td>৳@item.Amount</td>
                <td>@item.Frequency</td>
                <td>
                    <a asp-action="EditFeeType" asp-route-id="@item.FeeTypeId" class="btn btn-sm btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="DeleteFeeType" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@item.FeeTypeId" />
                        <button type="submit" class="btn btn-sm btn-danger"
                                onclick="return confirm('Are you sure you want to delete this fee type?')">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>