@model Class

<form id="CreateClassForm">

	<label>Class Name</label>
	<input asp-for="ClassName" class="form-control" />

	<label>Department</label>
	<select asp-for="DepartmentId" class="form-control">
		<option value="">Select Department</option>
		@foreach (var item in ViewBag.DepartmentList)
		{
			<option value="@item.DepartmentId">@item.DepartmentName</option>
		}
	</select>

	<hr />

	<button type="button" class="btn btn-primary" onclick="SaveClass()">Save</button>
</form>

<script>
	function SaveClass() {
		var form = $("#CreateClassForm").serialize();

		$.post('/Class/Create', form, function () {
			$("#classModal").modal('hide');
			RefreshClassList();   // Student Form dropdown reload
		});
	}
</script>
