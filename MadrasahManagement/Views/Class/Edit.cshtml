@model MadrasahManagement.Models.Class

<h2>Edit Class</h2>
<form method="post">
    <input type="hidden" asp-for="ClassId" />

    <div class="form-group">
        <label>Class Name</label>
        <input asp-for="ClassName" class="form-control" />
    </div>

    <div class="form-group">
        <label>Session Year</label>
        <input asp-for="SessionYear" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="DepartmentId" class="form-control">
            @foreach (var d in ViewBag.Departments)
            {
                <option value="@d.DepartmentId"
                        selected="@(d.DepartmentId == Model.DepartmentId)">
                    @d.DepartmentName
                </option>
            }
        </select>
    </div>

    <button class="btn btn-primary mt-2">Update</button>
</form>
