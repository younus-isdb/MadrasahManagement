@model IEnumerable<MadrasahManagement.Models.Class>

<h2>Class List</h2>
<a class="btn btn-primary mb-2" href="/Class/Create">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Class Name</th>
            <th>Session</th>
            <th>Department</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ClassName</td>
                <td>@item.SessionYear</td>
                <td>@item.Department.DepartmentName</td>
                <td>
                    <a href="/Class/Details/@item.ClassId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Class/Edit/@item.ClassId" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Class/Delete/@item.ClassId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
