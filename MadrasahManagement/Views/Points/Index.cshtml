@model IEnumerable<MadrasahManagement.Models.PointCondition>

@{
    ViewData["Title"] = "Point Condition List";
}

<h4 class="mb-3">Point / Result Condition List</h4>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm">➕ New Point Condition</a>
</p>

<table class="table table-bordered table-striped table-sm">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Education Year</th>
            <th>Exam</th>
            <th>Class</th>
           @*  <th>Subject</th> *@
            <th>Pass Mark</th>
            <th>Highest</th>
            <th>Conditions</th>
            <th width="140">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int sl = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@sl</td>
                <td>@item.EducationYear</td>
                <td>@item.Examination?.ExamName</td>
                <td>@item.Class?.ClassName</td>
               @*  <td>@item.Subject?.SubjectName</td> *@
                <td class="text-center">@item.PassMarks</td>
                <td class="text-center">@item.HighestMark</td>
                <td class="text-center">
                    @(item.Details != null ? item.Details.Count : 0)
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.PointConditionId"
                       class="btn btn-primary btn-sm">Edit</a>

                    <a asp-action="Delete" asp-route-id="@item.PointConditionId"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Are you sure?');">
                        Delete
                    </a>
                </td>
            </tr>
            sl++;
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No Point Condition Found!
    </div>
}
