<br />
<h5 style="color:green">Issued Books</h5>
<div class="container mt-4">
	<div class="row">

		@for (int i = 0; i < Model.Count; i++)
		{
			var book = Model[i];

			<div class="col-12 col-md-4 mb-4">
				<div class="card h-100">
					<div class="card-body">
						<dl class="row">
                            <dd class="text-center"><strong>@(i + 1)</strong></dd>

							<dt class="col-sm-4">Book Title</dt>
							<dd class="col-sm-8">@book.Book?.Title</dd>

							<dt class="col-sm-4">Author</dt>
							<dd class="col-sm-8">@book.Book?.Author</dd>

							<dt class="col-sm-4">Category</dt>
							<dd class="col-sm-8">@book.Book?.Category</dd>

							<dt class="col-sm-4">IssueDate</dt>
							<dd class="col-sm-8">@book.IssueDate.ToString("dd-MMM-yyyy")</dd>

							<dt class="col-sm-4">ReturnDate</dt>
							<dd class="col-sm-8">
								@if (@book.ReturnDate.HasValue)
								{
									@book.ReturnDate.Value.ToString("dd-MMM-yyyy")
								}
								else
								{
									<span class="badge bg-warning">Not Returned</span>
								}
							</dd>

							<dt class="col-sm-4">Fine</dt>
							<dd class="col-sm-8">@book.Fine</dd>

							<dt class="col-sm-4">Image</dt>
							<dd class="col-sm-8">
								@if (!string.IsNullOrEmpty(@book.Book?.ImageUrl))
								{
									<img src="@book.Book.ImageUrl" alt="@book.Book.Title"
										 class="img-fluid rounded shadow" style="max-height: 300px;">
								}
								else
								{
									<span class="text-muted">No image available</span>
								}
							</dd>

						</dl>

					</div>

				</div>
			</div>
		}

	</div>
</div>





@* @using MadrasahManagement.Models
@model List<IssuedBook>

@{
    ViewData["Title"] = "Issued Books";
}

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="d-flex justify-content-between align-items-center">
                <h4 class="mb-0">
                    <i class="fas fa-book"></i> Issued Books
                </h4>
                <span class="badge bg-light text-dark">
                    Total: @Model.Count
                </span>
            </div>
        </div>

        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">
                    <i class="fas fa-info-circle"></i> No books have been issued.
                </div>
            }
            else
            {
        
                @if (Model.Any())
                {
                    var firstBook = Model.First();
                    <div class="user-card mb-4 p-3 bg-light rounded">
                        <h5>User Information</h5>
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Name:</strong> @firstBook.UserFullName</p>
                                <p><strong>Email:</strong> @firstBook.AppUser?.Email</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>User ID:</strong> @firstBook.IssuedTo</p>
                                <p><strong>User Type:</strong> @firstBook.UserType</p>
                            </div>
                        </div>
                    </div>
                }

              
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>Book Details</th>
                                <th>Issue Info</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Count; i++)
                            {
                                var book = Model[i];
                                <tr>
                                    <td>@(i + 1)</td>
                                    <td>
                                        <strong>@book.Book?.Title</strong><br>
                                        <small class="text-muted">
                                            <i class="fas fa-user-pen"></i> @book.Book?.Author<br>
                                            <i class="fas fa-tag"></i> @book.Book?.Category
                                        </small>
                                    </td>
                                    <td>
                                        <strong>Issued:</strong> @book.IssueDate.ToString("dd-MMM-yyyy")<br>

                                    </td>
                                    <td>
                                        @if (book.ReturnDate.HasValue)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Returned
                                            </span>
                                            <br>
                                            <small>on @book.ReturnDate.Value.ToString("dd-MMM-yyyy")</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-clock"></i> Issued
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Details" asp-route-id="@book.Id"
                                               class="btn btn-sm btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!book.ReturnDate.HasValue)
                                            {
                                                <a asp-action="ReturnBook" asp-route-id="@book.Id"
                                                   class="btn btn-sm btn-success" title="Return Book">
                                                    <i class="fas fa-book"></i>
                                                </a>
                                            }
                                            <a asp-action="Edit" asp-route-id="@book.Id"
                                               class="btn btn-sm btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total</h5>
                                <h3 class="text-primary">@Model.Count</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Issued</h5>
                                <h3 class="text-warning">@Model.Count(b => !b.ReturnDate.HasValue)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Returned</h5>
                                <h3 class="text-success">@Model.Count(b => b.ReturnDate.HasValue)</h3>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6 mb-3">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Total Fine</h5>
                                <h3 class="text-danger">₹@Model.Sum(b => b.Fine)</h3>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <div class="mt-3">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Optional: Add some CSS for better look -->
