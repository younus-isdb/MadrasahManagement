@model MadrasahManagement.Models.Section
@{
    ViewData["Title"] = "Delete Section";
}

<h2 class="mb-4 text-danger">Delete Section</h2>

<div class="card shadow-sm border-danger">
    <div class="card-body">
        <h5 class="card-title text-danger"><i class="bi bi-exclamation-triangle-fill"></i> Are you sure you want to delete this section?</h5>
        <dl class="row mt-3">
            <dt class="col-sm-3">Section ID</dt>
            <dd class="col-sm-9">@Model.SectionId</dd>

            <dt class="col-sm-3">Class</dt>
            <dd class="col-sm-9">@Model.Class.ClassName</dd>

            <dt class="col-sm-3">Section Name</dt>
            <dd class="col-sm-9">@Model.SectionName</dd>
        </dl>

        <form asp-action="Delete" method="post" class="mt-3">
            <input type="hidden" asp-for="SectionId" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Cancel</a>
        </form>
    </div>
</div>
