@model MadrasahManagement.Models.Section

<h2>Edit Section</h2>
<form method="post">
    <input type="hidden" asp-for="SectionId" />

    <div class="form-group">
        <label>Section Name</label>
        <input asp-for="SectionName" class="form-control" />
    </div>

   

    <div class="form-group">
        <label>Class</label>
        <select asp-for="ClassId" class="form-control">
            @foreach (var c in ViewBag.ClassList)
            {
                <option value="@c.ClassId"
                        selected="@(c.ClassId == Model.ClassId)">
                    @c.ClassName
                </option>
            }
        </select>
    </div>

    <button class="btn btn-primary mt-2">Update</button>
</form>
