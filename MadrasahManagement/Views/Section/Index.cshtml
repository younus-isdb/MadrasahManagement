@model IEnumerable<MadrasahManagement.Models.Section>

<h2>Section List</h2>
<a class="btn btn-primary mb-2" href="/Section/Create">Create New</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Section Name</th>
            <th>Class</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SectionName</td>
                <td>@item.Class.ClassName</td>
                <td>
                    <a href="/Section/Details/@item.SectionId" class="btn btn-info btn-sm">Details</a>
                    <a href="/Section/Edit/@item.SectionId" class="btn btn-warning btn-sm">Edit</a>
                    <a href="/Section/Delete/@item.SectionId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
